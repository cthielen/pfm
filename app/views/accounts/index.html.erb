<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-lg-12">
    <div style="float: right;">
      <%= link_to '<button type="button" class="btn btn-default">New Account</button>'.html_safe, new_account_path %>
    </div>

    <div class="page-header">
      <h1 id="tables">Accounts</h1>
    </div>

    <div class="bs-component">
      <table class="table table-striped table-hover ">
        <thead>
          <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Balance</th>
          </tr>
        </thead>
        <tbody>
          <% @accounts.each do |account| %>
          <tr>
            <td><%= account.name %></td>
            <td><%= account.type %></td>
            <td><%= number_to_currency(account.balance) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div> <!-- .row -->
